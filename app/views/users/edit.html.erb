<div class="container edit-container">
<h2 class="text-center my-5">プロフィール編集</h2>
<%= form_for @user do |f| %>

  <div class="form-group mb-5">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group mb-5">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  
  <%= f.submit '編集完了', class: 'btn btn-success btn-block mb-5'%>
<% end %>
</div>
