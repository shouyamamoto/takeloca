<div class="container edit-container">
<h2 class="text-center my-5">記事作成</h2>
<%= form_for @article do |f| %>

  <div class="mb-5">
    <%= f.label :article_image, '投稿する画像' %>
    <%= f.attachment_field :article_image %>
  </div>
  
  <div class="form-group mb-5">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  
  <div class="form-group mb-5">
    <%= f.label :body, '本文'%>
    <%= f.text_area :body, class: 'form-control', rows: 10 %>
  </div>
  
  <hr class="mb-3">
  <p class="p-11 text-center">みんなの素敵なカメラライフのために情報を提供しよう!!</p>
  
  <div class="mb-3">
    <%= f.label :location, '都道府県:'%>
    <%= f.select :location, Article.locations.keys, {prompt: '選択してください'} %>
  </div>

  
  <div class="form-group mb-3">
    <%= f.label :details, '詳細な場所'%>
    <%= f.text_field :details, class: 'form-control'%>
  </div>
  
  <%= f.submit '投稿する', class: 'btn btn-success btn-block mb-5'%>
<% end %>
</div>